# EditorConfig for cd-frontend-web only
# https://editorconfig.org/

root = true

# Match existing project line-endings to avoid noisy diffs
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Web source
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

# Data / config
[*.{json,jsonc,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown: keep trailing whitespace (can be meaningful)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Dockerfile: keep indentation flexible (no enforced indent size)
[Dockerfile]
indent_size = unset
